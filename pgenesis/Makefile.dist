	@echo XLIB = $(XLIB)
	@echo XINCLUDE = $(XINCLUDE)
	@echo CC = $(CC)
	@echo CFLAGS = $(CFLAGS)
	@echo CPP = $(CPP)
	@echo SYSLIBS = $(SYSLIBS)
	@echo EXT_LIBS = $(EXT_LIBS)
	@make check

install: check
