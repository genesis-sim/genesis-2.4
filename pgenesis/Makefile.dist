	echo $(MPI_DEBUG_CMD) > src/startup/mpidebugcmd
	$(MAKE) objliblistfile
	$(MAKE) $(DEFINES) pnxinstall
	rm -f optliblist objliblist

mininstall: check
	echo $(MPI_CMD) > src/startup/mpicmd
	echo $(MPI_DEBUG_CMD) > src/startup/mpidebugcmd
	$(MAKE) objliblistfile
	$(MAKE) $(DEFINES) pmininstall
