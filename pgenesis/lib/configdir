#!/bin/csh -f
# argv[1] is a string to replace with argv[2]

set orig=$argv[1]
set repl=$argv[2]

# remove any . or .. pathname components
if ( -r $repl ) then
  pushd $repl >& /dev/null
    set repl=$cwd
  popd >& /dev/null
endif

sed s+$orig\+$repl\+g 

# $Log: configdir,v $
